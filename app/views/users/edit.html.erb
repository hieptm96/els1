<% provide(:title, t("user.edit_user")) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-login">
      <h1><%= t("user.update") %></h1>
      <%= form_for(@user) do |f| %>
        <%= render "shared/error_messages", object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control input-sm chat-input" %>

        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control input-sm chat-input" %>

        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>

        <%= f.label :password %>
        <%= f.password_field :password,
          class: "form-control input-sm chat-input" %>

        <%= f.label :password_confirmation, t("user.confirmation") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>

        <%= f.submit t("categories.save_change"),
          class: "btn btn-primary btn-md" %>
      <% end %>
    </div>
  </div>
</div>
